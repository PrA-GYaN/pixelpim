# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://postgres:password@localhost:5432/pixelpim_dev"

# ===========================================
# JWT CONFIGURATION
# ===========================================
# Secret key for signing JWT tokens (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# JWT token expiration time
# Options: "1h", "24h", "7d", "30d"
JWT_EXPIRES_IN="7d"

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
# Create OAuth 2.0 credentials and add authorized redirect URI:
# Development: http://localhost:3000/auth/google/callback
# Production: https://yourdomain.com/auth/google/callback

GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# EMAIL CONFIGURATION (for OTP)
# ===========================================
# SMTP server configuration

# Gmail Configuration (recommended for development)
# Note: Use App Password, not your regular password
# 1. Enable 2FA on your Google account
# 2. Generate App Password: Google Account > Security > 2-Step Verification > App passwords
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-16-character-app-password"
EMAIL_FROM="noreply@pixelpim.com"

# Alternative email providers (uncomment to use):
# Outlook/Hotmail:
# EMAIL_HOST="smtp-mail.outlook.com"
# EMAIL_PORT=587

# Yahoo Mail:
# EMAIL_HOST="smtp.mail.yahoo.com"
# EMAIL_PORT=587

# SendGrid (recommended for production):
# EMAIL_HOST="smtp.sendgrid.net"
# EMAIL_PORT=587
# EMAIL_USER="apikey"
# EMAIL_PASS="your-sendgrid-api-key"

# ===========================================
# CLOUDINARY CONFIGURATION (for file uploads)
# ===========================================
# Get these from Cloudinary Dashboard: https://cloudinary.com/console
# Free tier provides 25 GB storage and 25 GB monthly bandwidth

CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Port for the application to run on
PORT=3000

# Node environment (development, production, test)
NODE_ENV="development"

# ===========================================
# WOOCOMMERCE INTEGRATION
# ===========================================
# WooCommerce REST API Configuration
# Get credentials from: WooCommerce > Settings > Advanced > REST API

# Base URL for WooCommerce REST API (with wp-json path)
WC_API_URL="https://yourstore.com/wp-json/wc/v3"

# WooCommerce Consumer Key
WC_CONSUMER_KEY="ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# WooCommerce Consumer Secret
WC_CONSUMER_SECRET="cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# WooCommerce Webhook Secret (for validating incoming webhooks)
# Set this same value when creating webhooks in WooCommerce
WC_WEBHOOK_SECRET="your_wc_webhook_secret_key"

# ===========================================
# AMAZON SELLER CENTRAL (SP-API) INTEGRATION
# ===========================================
# Amazon Selling Partner API credentials
# Apply for SP-API access: https://developer-docs.amazon.com/sp-api/

# SP-API Application Client ID
AMZ_CLIENT_ID="amzn1.application-oa2-client.xxxxxxxxxxxxxxxxxxxxxxxx"

# SP-API Application Client Secret
AMZ_CLIENT_SECRET="amzn1.oa2-cs.v1.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# SP-API Refresh Token (obtained through OAuth authorization)
AMZ_REFRESH_TOKEN="Atzr|IwEBxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Amazon Marketplace Region (us-east-1, eu-west-1, us-west-2)
# us-east-1 = North America, eu-west-1 = Europe, us-west-2 = Far East
AMZ_REGION="us-east-1"

# Amazon Seller ID (Merchant ID)
AMZ_SELLER_ID="AXXXXXXXXXXXXX"

# Amazon Webhook Secret (for validating SNS notifications)
AMZ_WEBHOOK_SECRET="your_amazon_webhook_secret_key"
